{
  "rules": {
    "rooms_private": {
      "$room": {
        "uid_participants": {
          "$uid": {
            ".write": "$uid === auth.uid"
          }
        }
      }
    },
    "rooms_public": {
      "$room": {
        ".read": true
      }
    },
    "users_private": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "users_public": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    }
  }
}
