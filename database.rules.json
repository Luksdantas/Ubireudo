{
  "rules": {
    "rooms": {
      "$room": {
        "uid_participants": {
          "$uid": {
            ".read": true,
            ".write": "root.child('rooms').child($room).child('uid_admins').hasChild('$uid')"
          }
        }
      }
    },
    "users_private": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "users_public": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    }
  }
}